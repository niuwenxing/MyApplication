<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.Activity.sonview.activity.WorkSurfaceActivity">

    <include layout="@layout/navigationbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/Teamname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="团队名称"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_TeamnameEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:layout_toEndOf="@+id/Teamname"
                    style="@style/text_EntryformInput"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/Yourschool"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="所在学校"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_YourschoolEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:layout_toEndOf="@+id/Yourschool"
                    style="@style/text_EntryformInput"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/Teamsize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="团队人数"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:maxWidth="@dimen/dp_100"
                    android:id="@+id/et_TeamsizeEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:layout_toEndOf="@+id/Teamsize"
                    style="@style/text_EntryformInput"/>

                <TextView
                    android:layout_toEndOf="@+id/et_TeamsizeEdit_str"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/text_Entryform"
                    android:text="人"
                    android:layout_marginLeft="@dimen/dp_20"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/EstablishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="成立时间"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_EstablishTimeEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请选择"
                    android:enabled="false"
                    android:layout_toEndOf="@+id/EstablishTime"
                    style="@style/text_EntryformInput"
                    android:layout_toLeftOf="@+id/tv_EstablishTime_btn"
                    />

                <ImageView
                    android:id="@+id/tv_EstablishTime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:scaleType="center"
                    android:src="@mipmap/xialaform"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/ProjectType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="项目类型"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_ProjectTypeEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请选择"
                    android:enabled="false"
                    android:layout_toEndOf="@+id/ProjectType"
                    style="@style/text_EntryformInput"
                    android:layout_toLeftOf="@+id/tv_ProjectType_btn"/>

                <ImageView
                    android:id="@+id/tv_ProjectType_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:scaleType="center"
                    android:src="@mipmap/xialaform"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/IsRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否注册"
                    style="@style/text_Entryform"
                    />

                <RadioGroup
                    android:id="@+id/IsRegistered_btn"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/IsRegistered"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/IsYesRegistered_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="是"
                        android:button="@null"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:tag="1"
                        android:drawableLeft="@drawable/isregistered_bg"
                        />
                    <RadioButton
                        android:id="@+id/IsNoRegistered_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="否"
                        android:button="@null"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:checked="true"
                        android:tag="2"
                        android:drawableLeft="@drawable/isregistered_bg"
                        />

                </RadioGroup>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/Teamleader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="团队负责人"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_TeamleaderEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:layout_toEndOf="@+id/Teamleader"
                    style="@style/text_EntryformInput"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/Telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_TelephoneEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:layout_toEndOf="@+id/Telephone"
                    style="@style/text_EntryformInput"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/WorkMailbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邮箱"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:id="@+id/et_WorkMailboxEdit_str"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="textEmailAddress"
                    android:layout_toEndOf="@+id/WorkMailbox"
                    style="@style/text_EntryformInput"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Personalprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="团队/个人简介"
                    style="@style/text_Entryform"
                    />

                <EditText
                    android:padding="@dimen/dp_10"
                    android:layout_below="@+id/Personalprofile"
                    android:id="@+id/et_PersonalEdit_str"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_154"
                    android:maxHeight="@dimen/dp_154"
                    android:background="#f5f5f5"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/colorBrightgray"
                    android:textSize="@dimen/sp_12"
                    android:gravity="left"
                    android:hint="请填写"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_Submission_btn"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交申请"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:background="@drawable/fromsubmission"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>