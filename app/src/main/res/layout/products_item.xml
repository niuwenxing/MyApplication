<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_160"
    android:layout_height="@dimen/dp_223"
    android:background="@mipmap/tupianbeijing"
    >
    <ImageView
        android:id="@+id/img_products"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_143"
        android:src="@mipmap/shangpintupian"
        android:scaleType="centerCrop"
        android:layout_marginRight="3dp"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_below="@+id/img_products"
        android:id="@+id/tv_ProductsIntroduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="2019新品可爱仙人掌"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/tv_ProductsPrice"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_ProductsIntroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_ProductsIntroduce"
        android:maxLines="1"
        android:text="￥398.00"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12"
        android:gravity="left"
        />




</RelativeLayout>