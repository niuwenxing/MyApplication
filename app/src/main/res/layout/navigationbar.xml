<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42"
    android:orientation="horizontal"
    android:background="@drawable/bottomframe"
    >

        <ImageView
            android:id="@+id/gobank_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            />

        <LinearLayout
            android:id="@+id/searchView"
            android:layout_margin="@dimen/dp_4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/searchbar_view"
            android:visibility="visible"
            >
            <ImageView
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousu"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                />
            <EditText
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/searchText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Search item"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_searchTextTitle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/colorTartextTitle"
            android:text="标题"
            android:gravity="center"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/searech_news_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/xiaoxi"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/searech_Shopping_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gouwuche"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/xiaoxi"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="编辑"
            android:textColor="@color/colorTartext"
            android:visibility="gone"
            />

</LinearLayout>

