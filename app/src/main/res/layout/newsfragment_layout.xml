<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/View"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/newtbar"
        android:fitsSystemWindows="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="消息"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:paddingLeft="@dimen/sp_10"
            android:paddingRight="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/img_contacts_btn"
            android:src="@mipmap/tongxunlu"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f5f5f5"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/oneview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18"
                    android:id="@+id/rl_NewsFans_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    >
                    <ImageView
                        android:id="@+id/imageNews"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/fensi"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/imageNews"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="粉丝"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_13"
                        android:gravity="left|center_vertical"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/gengduoash"
                        android:layout_alignParentRight="true"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f5f5f5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18"
                    android:id="@+id/rl_NewsFabulous_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    >
                    <ImageView
                        android:id="@+id/imageNewsFabulous"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/dianzan"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/imageNewsFabulous"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="点赞"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_13"
                        android:gravity="left|center_vertical"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/gengduoash"
                        android:layout_alignParentRight="true"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f5f5f5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18"
                    android:id="@+id/rl_Newscomment_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    >
                    <ImageView
                        android:id="@+id/imagecomment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/pinglun"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/imagecomment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="评论"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_13"
                        android:gravity="left|center_vertical"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/gengduoash"
                        android:layout_alignParentRight="true"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f5f5f5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingRight="@dimen/dp_18"
                    android:id="@+id/rl_NewsJiYingOfficial_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    >
                    <ImageView
                        android:id="@+id/imageOfficial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/jiyingguanfang"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/imageOfficial"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="玑瑛官方"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_13"
                        android:gravity="left|center_vertical"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/gengduoash"
                        android:layout_alignParentRight="true"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f5f5f5"/>

                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>