<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Activity.sonview.activity.SetupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:textColor="@color/colorTartext"
            android:text="设置"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_back_btn"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_15"
        >
        <View
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorTartext"
            android:textSize="@dimen/sp_15"
            android:text="头像"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/genduoportrait_btn"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gengduoash"/>

        <com.example.jiyin.common.widget.MLImageView
            android:layout_marginRight="@dimen/sp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/genduoportrait_btn"
            android:src="@mipmap/shangpintupian6"
            app:ml_shape_type="round" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_15"
        >
        <View
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorTartext"
            android:textSize="@dimen/sp_15"
            android:text="昵称"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/Namegenduos"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gengduoash"/>

        <TextView
            android:id="@+id/studioStr"
            android:layout_marginRight="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="栗子工作室"
            android:textColor="#808080"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/Namegenduos"
            android:src="@mipmap/shangpintupian6"  />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_15"
        >
        <View
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorTartext"
            android:textSize="@dimen/sp_15"
            android:text="手机号"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/phonenumber_btn"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gengduoash"/>

        <TextView
            android:id="@+id/tv_phoneStr"
            android:layout_marginRight="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="13223658956"
            android:textColor="#808080"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/phonenumber_btn"
            android:src="@mipmap/shangpintupian6"  />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_15"
        >
        <View
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorTartext"
            android:textSize="@dimen/sp_15"
            android:text="收货地址"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/address_btn"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gengduoash"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_15"
        >
        <View
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorTartext"
            android:textSize="@dimen/sp_15"
            android:text="修改密码"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ChangePassword_btn"
            android:padding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/gengduoash"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/logOut_btn"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_40"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="#ee7700"
        android:textSize="18sp"
        android:background="@drawable/logout"
        />



</LinearLayout>