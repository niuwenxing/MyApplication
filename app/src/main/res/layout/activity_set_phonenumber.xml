<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home.Activity.sonview.activity.SetPhonenumberActivity">
    <include layout="@layout/layout_common_throw"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改手机号"
        android:textColor="#333333"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:scaleType="fitXY"
        android:src="@mipmap/fanhui"
        app:layout_constraintBottom_toBottomOf="@+id/textView23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView23" />

    <Button
        android:id="@+id/oksure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/set_username_style_btn"
        android:text="确认更改"
        android:textColor="#66ffffff"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_codeeditText" />

    <EditText
        android:paddingLeft="@dimen/sp_10"
        android:id="@+id/et_newPhone"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_33"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:hint="请输入新手机号"
        android:inputType="phone"
        android:maxLines="11"
        style="@style/inputEtxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="新手机号码"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_newPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_newPhone" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="20dp"
        android:background="@drawable/set_username_style_btn"
        android:gravity="center"
        android:paddingLeft="@dimen/sp_13"
        android:paddingRight="@dimen/sp_13"
        android:text="获取验证码"
        android:textColor="#FFF"
        android:textSize="@dimen/sp_13"
        app:layout_constraintEnd_toEndOf="@+id/et_newPhone"
        app:layout_constraintTop_toBottomOf="@+id/et_newPhone" />


    <EditText
        android:id="@+id/et_codeeditText"
        style="@style/inputEtxt"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:background="@color/white"
        android:hint="验证码"
        android:paddingLeft="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/et_newPhone"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_codeeditText"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/et_codeeditText" />

</androidx.constraintlayout.widget.ConstraintLayout>