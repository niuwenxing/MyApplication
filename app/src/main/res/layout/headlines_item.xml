<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_7"
    android:paddingRight="@dimen/dp_7"
    android:layout_height="@dimen/dp_106">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/img_headlineImage"
        android:layout_alignBottom="@+id/img_headlineImage"
        android:layout_alignTop="@+id/img_headlineImage"
        android:layout_marginRight="@dimen/dp_20"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_contextText"
            android:maxLines="2"
            android:textColor="@color/colorSearch"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            />

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/headlineslogo"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:id="@+id/imgview"
            android:layout_alignTop="@+id/appTitle"
            android:layout_alignBottom="@+id/appTitle"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玑瑛公社"
            android:layout_alignParentBottom="true"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            android:layout_toRightOf="@+id/imgview"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/tv_contextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            android:maxLines="1"
            android:layout_toRightOf="@+id/appTitle"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/tv_contextNumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            android:layout_toRightOf="@+id/tv_contextTime"
            />




    </RelativeLayout>
    
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/img_headlineImage"
        android:layout_width="@dimen/dp_113"
        android:layout_height="@dimen/dp_86"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:layout_alignParentBottom="true"
/>

</RelativeLayout>