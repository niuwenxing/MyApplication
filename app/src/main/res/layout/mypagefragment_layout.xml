<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:src="@mipmap/beijingmy"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:id="@+id/uptop"/>
            <RelativeLayout
                android:id="@+id/menuMey"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_15"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/uptop">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:id="@+id/topView"
                    >
                    <com.example.jiyin.common.widget.MLImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:src="@mipmap/tu2"
                        app:ml_shape_type="round"
                        android:id="@+id/img_myImage"
                        app:ml_border_color="#4df97800"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="栗子工作室"
                        android:id="@+id/tv_UserName"
                        android:layout_toRightOf="@+id/img_myImage"
                        android:textColor="@color/colorNews"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginLeft="@dimen/dp_10"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="设置"
                        android:id="@+id/tv_Setup_btn"
                        android:textColor="@color/colorNews"
                        android:textSize="@dimen/sp_16"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/shezhi"
                        android:layout_marginRight="@dimen/dp_21"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableTop="@mipmap/wodedingdanmy"
                        android:gravity="center"
                        android:textSize="@dimen/sp_12"
                        android:id="@+id/tv_Myorder_btn"
                        android:textColor="@color/colorTartextTitle"
                        android:text="我的订单"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/gouwuchemy"
                        android:gravity="center"
                        android:text="购物车"
                        android:id="@+id/tv_ShoppingCart_btn"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/colorTartextTitle"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/wodeshoucangmy"
                        android:gravity="center"
                        android:text="我的收藏"
                        android:id="@+id/tv_Collection_btn"
                        android:drawablePadding="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorTartextTitle"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/wodezanmy"
                        android:gravity="center"
                        android:text="我的赞"
                        android:id="@+id/tv_Fabulous_btn"
                        android:textSize="@dimen/sp_12"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/colorTartextTitle"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/menuMey"
                >
                <com.example.rootlib.widget.common.CommonItem
                    android:id="@+id/Applicationrecord_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:img_src="@mipmap/shengqingjilv"
                    app:img_vis="0"
                    app:right_img="@mipmap/gengduo"
                    app:right_img_vis="0"
                    app:title_text="申请记录"
                    app:title_vis="0"/>
                <com.example.rootlib.widget.common.CommonItem
                    android:id="@+id/Myrelease_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:img_src="@mipmap/wodefabu"
                    app:img_vis="0"
                    app:right_img="@mipmap/gengduo"
                    app:right_img_vis="0"
                    app:title_text="我的发布"
                    app:title_vis="0"/>
                <com.example.rootlib.widget.common.CommonItem
                    android:id="@+id/MyCustomer_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:img_src="@mipmap/wodekefu"
                    app:img_vis="0"
                    app:right_img="@mipmap/gengduo"
                    app:right_img_vis="0"
                    app:title_text="我的客服"
                    app:title_vis="0"/>
                <com.example.rootlib.widget.common.CommonItem
                    android:id="@+id/Aboutus_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:img_src="@mipmap/guanyuwomen"
                    app:img_vis="0"
                    app:right_img="@mipmap/gengduo"
                    app:right_img_vis="0"
                    app:title_text="关于我们"
                    app:title_vis="0"/>




            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>