<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.Activity.sonview.activity.ProduceDetailsActivity">

    <include layout="@layout/navigationbar" />

    <include layout="@layout/layout_common_throw"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relatvelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/lpk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            app:layout_constraintBottom_toBottomOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/participate_btn">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/kefuhuan"
                    />

                <TextView
                    android:id="@+id/tv_CreaPhone_btn"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/image"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <TextView
                android:text="报名申请"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="@dimen/sp_16"
                android:id="@+id/creationpatea_btn"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_130"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>