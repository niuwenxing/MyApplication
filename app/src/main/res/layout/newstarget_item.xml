<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="5dp"
        >

        <com.example.jiyin.common.widget.MLImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@mipmap/tu2"
            app:ml_shape_type="round"
            android:id="@+id/img_targetImage"
            />

        <TextView
            android:id="@+id/tv_targetName"
            android:layout_toRightOf="@+id/img_targetImage"
            android:layout_alignTop="@+id/img_targetImage"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天津迅飞科技"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_targetName"
            android:layout_marginLeft="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img_targetImage"
            android:layout_toLeftOf="@+id/tv_targetTime"
            android:gravity="left"
            android:maxLines="1"
            android:text="你好，我们目前......"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"

            />

        <TextView
            android:id="@+id/tv_targetTime"
            android:layout_alignTop="@+id/tv_targetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="13:39"
            android:textColor="#999999"
            android:textSize="@dimen/sp_11"
            />

        <com.example.jiyin.common.widget.BadgeView
            android:layout_below="@+id/tv_targetTime"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showNum="true"
            app:badgeRedSize="@dimen/sp_11"
            app:badgeNumPre="+"
            app:text="20"
            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="@mipmap/cejuxing"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/sp_10"
            android:src="@mipmap/shanchu"

            />

    </RelativeLayout>

    <!--<TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background=""
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="伤"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />-->

</LinearLayout>