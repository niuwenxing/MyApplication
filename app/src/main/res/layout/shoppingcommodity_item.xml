<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/re_WipesColumn"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        >
        <TextView
            android:id="@+id/tv_commodityNmae"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="丝巾制品"
            android:textColor="@color/colorShop"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:paddingBottom="@dimen/sp_6"
            android:background="@mipmap/xiaobiaoti_beijing"
            />
        <TextView
            android:id="@+id/tv_WipesMore_btn"
            android:paddingLeft="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            android:paddingBottom="@dimen/sp_6"
            android:drawableRight="@mipmap/gengduo"
            android:text="更多"
            android:gravity="center"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/re_WipesColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ry_WipesList"
        />
</LinearLayout>