<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".home.Activity.sonview.activity.WorkshopActivity">

    <include layout="@layout/navigationbar"/>

    <include layout="@layout/layout_common_throw"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/lableimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/dp_140"
                android:src="@mipmap/lunbotu1"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_10"
                android:id="@+id/textHtml"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <androidx.recyclerview.widget.RecyclerView
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:id="@+id/mRoomLabel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"/>



             <androidx.recyclerview.widget.RecyclerView
                 android:paddingLeft="@dimen/dp_10"
                 android:paddingRight="@dimen/dp_10"
                 android:layout_marginTop="@dimen/dp_15"
                 android:id="@+id/mRoomList"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>