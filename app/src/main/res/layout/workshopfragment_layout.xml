<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/newtbar"
        android:fitsSystemWindows="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="圈子"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:paddingLeft="@dimen/sp_10"
            android:paddingRight="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/img_xiaoxi_btn"
            android:src="@mipmap/xiaoxi"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#f5f5f5"/>

    </RelativeLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_WorkshopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tl:tabBackground="@drawable/choice"
        tl:tabIndicatorHeight="0dp"
        tl:tabMode="scrollable"
        tl:tabTextColor="#656565"
        tl:tabSelectedTextColor="#ffffff"
        tl:tabGravity="center"
        tl:tabRippleColor="@android:color/transparent"
        >
<!--        tl:tabTextAppearance="@style/MyTabLayoutTextAppearance"-->
    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:background="#f4f4f4"/>
    <include layout="@layout/layout_common_throw"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_WorkshopView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>