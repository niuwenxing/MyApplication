<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.jiyin.customwidget.NoScrollViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rg_main"
        android:layout_weight="1"
        >

    </com.example.jiyin.customwidget.NoScrollViewPager>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/dibubeijing"
        android:orientation="vertical"
        >
        <View
            android:layout_marginTop="@dimen/dp_9"
            android:layout_width="@dimen/dp_77"
            android:layout_height="4dp"
            android:background="@drawable/searchbar"
            android:layout_gravity="center"
            />
        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center|bottom"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_6"
                android:drawableTop="@drawable/home_newhome_select"
                android:textSize="@dimen/dp_10" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center|bottom"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_6"
                android:drawableTop="@drawable/home_workshop_select"
                android:textSize="@dimen/dp_10" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center|bottom"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:drawableTop="@mipmap/fabu"
                android:textSize="@dimen/dp_10" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center|bottom"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_6"
                android:drawableTop="@drawable/home_news_select"
                android:textSize="@dimen/dp_10" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_6"
                android:drawableTop="@drawable/home_newhome_select"
                android:textSize="@dimen/dp_10" />
        </RadioGroup>
    </LinearLayout>
    




