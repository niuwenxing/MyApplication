<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.Activity.sonview.activity.VocationalShengActivity">

    <include layout="@layout/navigationbar" />

    <include layout="@layout/layout_common_throw" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/name"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/et_NameEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/name"
                    android:background="@null"
                    android:hint="请填写" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/IsGender"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="性别" />

                <RadioGroup
                    android:id="@+id/IsGender_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/IsGender"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/IsYesGender_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/isregistered_bg"
                        android:drawablePadding="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:tag="1"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/IsNoGender_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/isregistered_bg"
                        android:drawablePadding="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:tag="2"
                        android:text="女" />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/tvAge"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="年龄" />

                <EditText
                    android:id="@+id/et_tvAgeEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/tvAge"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="请填写"
                    android:inputType="number"
                    android:maxWidth="@dimen/dp_100" />

                <TextView
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toEndOf="@+id/et_tvAgeEdit_str"
                    android:maxLength="3"
                    android:text="岁" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/Educations"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="学历" />

                <EditText
                    android:id="@+id/et_EducationEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/Educations"
                    android:background="@null"
                    android:hint="请填写" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/OccuSchool"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="所在学校" />

                <EditText
                    android:id="@+id/et_OccuSchoolEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/OccuSchool"
                    android:background="@null"
                    android:hint="请填写" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/jobs"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意向职位" />

                <EditText
                    android:id="@+id/et_jobsEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/jobs"
                    android:background="@null"
                    android:hint="请填写" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/OccuPhone"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/et_OccuPhoneEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/OccuPhone"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="phone"
                    android:maxLength="11" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/OccuMailbox"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/et_OccuMailboxEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/OccuMailbox"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="textEmailAddress" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <TextView
                    android:id="@+id/iDNumber"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/et_iDNumberEdit_str"
                    style="@style/text_EntryformInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/iDNumber"
                    android:background="@null"
                    android:digits="0123456789Xx"
                    android:hint="请填写"
                    android:maxLength="18" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/OuucIntroduction"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="个人简介" />

                <EditText
                    android:id="@+id/et_OuucIntroductionEdit_str"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@+id/OuucIntroduction"
                    android:background="#f5f5f5"
                    android:gravity="left"
                    android:hint="请填写"
                    android:maxHeight="@dimen/dp_154"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/colorBrightgray"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/UploadFlie"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:text="上传附件" />

                <TextView
                    android:id="@+id/tv_UploadFlie_btn"
                    style="@style/text_Entryform"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toEndOf="@+id/UploadFlie"
                    android:drawableLeft="@mipmap/fujian"
                    android:hint="上传附件"

                    />
            </RelativeLayout>
            <!--            <com.duke.dfileselector.widget.FileSelectorLayout-->
            <!--                android:id="@+id/file_select_layout"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent" />-->


            <TextView
                android:id="@+id/tv_CuuoSubmission_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/fromsubmission"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="提交申请"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>