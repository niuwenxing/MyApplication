<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomframe">
    <ImageView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/wangpingping"
        android:scaleType="centerCrop"
        android:id="@+id/iv_imagesearch"
        />

    <TextView
        android:id="@+id/tv_textsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/colorSearch"
        android:textSize="@dimen/sp_14"
        android:gravity="left"
        android:text="王萍萍"
        android:layout_alignTop="@+id/iv_imagesearch"
        android:layout_toRightOf="@+id/iv_imagesearch"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/tv_Culturebelongs"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNews"
        android:text="尚熹手作文化"
        android:textSize="@dimen/sp_12"
        android:layout_below="@+id/tv_textsearch"
        android:layout_toRightOf="@+id/iv_imagesearch"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/tv_Culturedescribe"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/colorScribe"
        android:textSize="@dimen/sp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/tv_Culturebelongs"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@+id/iv_imagesearch"
        android:text="每一件饰品都是有灵魂的，每一次的交付都是在与未知的人和情结
缘，那些灵动的、交缠在一起的丝线..."

        />

    <TextView
        android:id="@+id/tv_btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"
        android:textColor="@color/colorScribe"
        android:textSize="@dimen/sp_9"
        android:layout_below="@+id/tv_Culturedescribe"
        android:drawableRight="@mipmap/gengduo"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_12"
        />

</RelativeLayout>