<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.example.jiyin.common.widget.MLImageView
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_95"
        app:ml_shape_type="rectangle"
        app:ml_border_width="@dimen/dp_2"
        app:ml_border_color="#ff9898"
        app:ml_radius="@dimen/dp_3"
        android:src="@mipmap/shansiqi"
        android:id="@+id/ml_topImg"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ml_topImg"
        android:layout_alignTop="@+id/ml_topImg"
        android:layout_alignRight="@+id/ml_topImg"
        android:layout_alignLeft="@+id/ml_topImg"
        android:src="@mipmap/start"
        android:padding="@dimen/dp_30"
        />

    <TextView
        android:id="@+id/tv_topItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/ml_topImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="短视频展示"
        android:textColor="@color/colorNews"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_alignLeft="@+id/tv_topItemTitle"
        android:layout_below="@+id/tv_topItemTitle"
        android:id="@+id/tv_SpecialityStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="技能特长"
        android:textColor="@color/colorNews"
        android:textSize="@dimen/sp_10"
        android:maxLines="1"
        />

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignLeft="@+id/tv_topItemTitle"
        android:layout_alignBottom="@+id/ml_topImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-12-13"
        android:id="@+id/tv_topTime"
        android:textColor="@color/colorNews"
        android:textSize="@dimen/sp_9"
        />

    <TextView
        android:id="@+id/tv_heat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_topTime"
        android:layout_alignBottom="@+id/tv_topTime"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/tv_topTime"
        android:drawableLeft="@mipmap/redustudy"
        android:text="热度"
        android:textColor="@color/colorNews"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/tv_volumeStr"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_alignLeft="@+id/tv_topItemTitle"
        android:layout_above="@+id/tv_topTime"
        android:layout_width="wrap_content"
        android:drawableLeft="@mipmap/bofangxiaotubiao"
        android:layout_height="wrap_content"
        android:text="7.5W"
        android:gravity="center_vertical"
        android:textColor="@color/colorNews"
        android:textSize="@dimen/sp_9"
        />

</RelativeLayout>